<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Confirmation">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr.Foodie"
        android:textColor="#733b18"
        android:fontFamily="@font/lobster_two"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Category"
        android:textColor="#db650b"
        android:fontFamily="@font/montserrat"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/confirm_customer"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:text="Customer"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        />
    <Button
        android:id="@+id/confirm_seller"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:text="Seller"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:onClick="cseller"
        />

</LinearLayout>